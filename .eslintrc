{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		},
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": "warn",
		"no-multi-spaces": "warn",
		"space-infix-ops": ["warn", {"int32Hint": false}],
		"max-lines": ["warn", 300],
		"react/jsx-uses-vars": 1,
		"react/react-in-jsx-scope": 1,
		"no-console": 0,
		"max-len": ["warn", 120, 4]
	}
}
